extends _template

include { personal-offers } from modules

block append settings
  -
    var heading = 'Интернет-магазин “Тики-Така”';

block main-content

  // start content-header 
  .content-header(class='main-content__header')
    ._container.container
      ._main
        h1._heading= heading
      
      ._aside
  // end content-header 

  // start content-body 
  .content-body(class='main-content__body')
    ._container.container

      // start content-section 
      +module-personal-offers({
        heading: 'Персональные предложения:',
        data: PRODUCTS.personalOffsers
      }, {
        class: 'content-body__section'
      })
      // end content-section 

  // end content-body 
